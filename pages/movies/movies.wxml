<import src="./movie-list/movie-list-template.wxml"/>
<import src="./movie-grid/movie-grid-template.wxml"/>

<!-- 搜索框的设置 -->
<view class="search">
  <icon type="search" class="search-img" size="13" color="#405f80"></icon>
  <input type="text" placeholder="釜山行，你的名字" placeholder-class="placeholder" bindfocus="onBindFocus" bindchange="onBindChange" />
  <image wx:if="{{containerShow}}" src="/images/icon/xx.png" class="xx-img" bindtap="onCancelImgeTap"></image>
</view>

<view class="container" wx:if="{{searchPanelShow}}">
  <view class="movies-template">
    <template is="movieListTemplate" data="{{...inTheaters}}" />
  </view>
  <view class="movies-template">
    <template is="movieListTemplate" data="{{...comingSoon}}" />
  </view>
  <view class="movies-template">
    <template is="movieListTemplate" data="{{...top250}}" />
  </view>
</view>

<!-- 搜索页面 -->
<view class="search-pannel" wx:if="{{containerShow}}">
  <template is="movieGridTemplate" data="{{...searchResult}}"  />
</view>